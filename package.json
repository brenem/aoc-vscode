{
  "name": "aoc-vscode",
  "displayName": "aoc-vscode",
  "description": "An extension for working on Advent of Code solutions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:aoc-solution"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aoc-container",
          "title": "Advent of Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aoc-container": [
        {
          "id": "aocExplorer",
          "name": "Advent of Code"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "aocExplorer",
        "contents": "No solutions found.\n[Initialize Workspace](command:aoc.generateDay)"
      }
    ],
    "commands": [
      {
        "command": "aoc.generateDay",
        "title": "Add Day",
        "icon": "$(add)"
      },
      {
        "command": "aoc.openDay",
        "title": "AoC: Open Day"
      },
      {
        "command": "aoc.runDay",
        "title": "AoC: Run Day"
      },
      {
        "command": "aoc.addUtility",
        "title": "Add Utility File",
        "icon": "$(add)"
      },
      {
        "command": "aoc.configureSession",
        "title": "AoC: Configure Session Token"
      },
      {
        "command": "aoc.runPart",
        "title": "AoC: Run Part"
      },
      {
        "command": "aoc.openInput",
        "title": "AoC: Open Input"
      },
      {
        "command": "aoc.debugPart",
        "title": "AoC: Debug Part"
      },
      {
        "command": "aoc.downloadInput",
        "title": "AoC: Download Input",
        "icon": "$(cloud-download)"
      }
    ],
    "configuration": {
      "title": "Advent of Code",
      "properties": {
        "aoc.githubRepo": {
          "type": "string",
          "default": "",
          "description": "Your GitHub repository (e.g., username/repo) for User-Agent header"
        },
        "aoc.contactEmail": {
          "type": "string",
          "default": "",
          "description": "Your contact email for User-Agent header"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "aoc.generateDay",
          "when": "view == aocExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aoc.generateDay",
          "when": "view == aocExplorer && viewItem == year",
          "group": "inline"
        },
        {
          "command": "aoc.addUtility",
          "when": "view == aocExplorer && viewItem == utilsFolder",
          "group": "inline"
        },
        {
          "command": "aoc.downloadInput",
          "when": "view == aocExplorer && viewItem == day",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "inversify": "^7.10.5",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
